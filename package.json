{
  "name": "docs-ts",
  "version": "0.8.0",
  "description": "Documentation tool for TypeScript packages",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "bin": "lib/bin.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint .",
    "vitest": "vitest",
    "coverage": "vitest run --coverage",
    "prettier": "prettier --list-different \"{src,test}/**/*.ts\"",
    "fix-prettier": "prettier --parser typescript --write \"{src,test}/**/*.ts\"",
    "test": "npm run prettier && npm run vitest -- run && npm run docs",
    "clean": "rimraf rm -rf lib/*",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "prepublish": "npm run build",
    "doctoc": "doctoc README.md --title \"**Table of contents**\"",
    "docs": "ts-node docs.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gcanti/docs-ts.git"
  },
  "author": "Giulio Canti <giulio.canti@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gcanti/docs-ts/issues"
  },
  "homepage": "https://github.com/gcanti/docs-ts",
  "dependencies": {
    "chalk": "^5.0.0",
    "doctrine": "^3.0.0",
    "fp-ts": "^2.15.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "io-ts": "^2.2.20",
    "logging-ts": "^0.3.4",
    "markdown-toc": "^1.2.0",
    "rimraf": "^6.0.0",
    "ts-morph": "^24.0.0",
    "ts-node": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@prettier/sync": "^0.5.2",
    "@types/doctrine": "^0.0.9",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^11.0.0",
    "@types/glob": "^8.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "doctoc": "^2.2.1",
    "eslint": "^9.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.2.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "tags": [],
  "keywords": []
}
